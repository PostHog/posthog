{
    "$schema": "https://json.schemastore.org/nx",
    "name": "frontend",
    "sourceRoot": "./src",
    "projectType": "library",
    "implicitDependencies": ["hogvm-ts", "lemon-ui", "apps-common"],
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["npm run build"],
                "cwd": "."
            },
            "outputs": ["./dist"]
        },
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["npm start"],
                "cwd": "."
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "options": {
                "jestConfig": "./jest.config.ts"
            }
        }
    }
}
