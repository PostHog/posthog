{
    "$schema": "https://turbo.build/schema.json",
    "extends": ["//"],
    "tasks": {
        "prepare": {
            "dependsOn": ["^build"]
        },
        "build": {
            "dependsOn": ["prepare"],
            "inputs": ["src", "!**/*.pyc"],
            "outputs": ["dist", "index.node"],
            "env": ["RUST_VERSION", "SHARD_INDEX", "SHARD_COUNT"],
            "passThroughEnv": ["RUSTUP_HOME", "CARGO_HOME", "DATABASE_URL", "REDIS_URL", "NODE_OPTIONS"]
        },
        "@posthog/cypress#build": {
            "dependsOn": ["@posthog/frontend#prepare"]
        },
        "@posthog/storybook#build": {
            "dependsOn": ["@posthog/frontend#prepare"]
        },
        "test": {
            "dependsOn": ["prepare"],
            "inputs": ["src", "!**/*.pyc"],
            "env": ["RUST_VERSION", "SHARD_INDEX", "SHARD_COUNT"],
            "passThroughEnv": ["RUSTUP_HOME", "CARGO_HOME", "DATABASE_URL", "REDIS_URL", "NODE_OPTIONS"]
        },
        "start": {
            "dependsOn": ["prepare"],
            "persistent": true,
            "cache": false
        },
        "dev": {
            "dependsOn": ["prepare"],
            "persistent": true,
            "cache": false
        }
    }
}
