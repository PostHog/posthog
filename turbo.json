{
    "$schema": "https://turbo.build/schema.json",
    "extends": ["//"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["src", "!**/*.pyc"],
            "outputs": ["dist"],
            "env": ["RUST_VERSION"],
            "passThroughEnv": ["RUSTUP_HOME", "CARGO_HOME"]
        },
        "test": {
            "dependsOn": ["^build"]
        },
        "start": {
            "dependsOn": ["^build"],
            "persistent": true,
            "cache": false
        },
        "dev": {
            "dependsOn": ["^build"],
            "persistent": true,
            "cache": false
        }
    }
}
