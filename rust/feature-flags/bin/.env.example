# PostHog Feature Flags Testing Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# PostHog Instance Configuration
# =============================================================================

# PostHog host URL (default: http://localhost:8010 for local development)
POSTHOG_HOST=http://localhost:8010

# Rust feature flags service URL (default: http://localhost:3001)
POSTHOG_RUST_SERVICE_HOST=http://localhost:3001

# =============================================================================
# API Keys
# =============================================================================

# Personal API Key (required for flag management)
# Generate at: http://localhost:8010/settings/user-api-keys
# Format: phx_*
POSTHOG_PERSONAL_API_KEY=

# Project API Key (required for flag evaluation)
# Find at: http://localhost:8010/settings/project#variables
# Format: phc_*
POSTHOG_PROJECT_API_KEY=

# =============================================================================
# Test Configuration
# =============================================================================

# Default distinct ID for testing
TEST_DISTINCT_ID=test-user-123

# Test user email (for property-based flag tests)
TEST_USER_EMAIL=test@example.com

# =============================================================================
# Local Evaluation Configuration
# =============================================================================

# Set to true to enable local evaluation in SDKs
# Requires POSTHOG_PERSONAL_API_KEY to be set
ENABLE_LOCAL_EVALUATION=false

# Polling interval for local evaluation (milliseconds)
LOCAL_EVAL_POLLING_INTERVAL=10000

# =============================================================================
# Debug Configuration
# =============================================================================

# Enable verbose logging
VERBOSE=false

# Request timeout in seconds
REQUEST_TIMEOUT=10
