{
    "name": "session-recordings",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "dependencies": {
        "@aws-sdk/client-s3": "^3.121.0",
        "@opentelemetry/exporter-prometheus": "^0.30.0",
        "@opentelemetry/sdk-metrics-base": "^0.30.0",
        "express": "^4.18.1",
        "kafkajs": "^2.1.0",
        "uuid": "^8.3.2"
    },
    "scripts": {
        "build": "swc ./src/ --out-dir ./dist",
        "test": "vitest",
        "start:ingester:dev": "NODE_ENV=dev nodemon -w src/ src/ingester/index.ts",
        "start:ingester:prod": "NODE_ENV=production node dist/ingester/index.js",
        "start:api:dev": "NODE_ENV=dev nodemon -w src/ src/api.ts",
        "start:api:prod": "NODE_ENV=production node dist/api.js",
        "start": "trap 'kill $(jobs -p)' EXIT; yarn start:api:dev & yarn start:ingester:dev",
        "start:prod": "trap 'kill $(jobs -p)' EXIT; yarn start:api:prod & yarn start:ingester:prod"
    },
    "devDependencies": {
        "@swc/cli": "^0.1.57",
        "@swc/core": "^1.2.211",
        "@types/express": "^4.17.13",
        "@types/node": "^18.0.3",
        "@types/uuid": "^8.3.4",
        "eslint": "^8.19.0",
        "nodemon": "^2.0.19",
        "prettier": "^2.7.1",
        "ts-node": "^10.8.2",
        "typescript": "^4.7.4",
        "vitest": "^0.17.1"
    }
}
