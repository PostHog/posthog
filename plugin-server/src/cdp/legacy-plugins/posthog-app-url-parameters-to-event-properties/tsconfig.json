{
    "compilerOptions": {
        "target": "ES2018",
        "lib": ["ESNext"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "*.test.ts"]
}
