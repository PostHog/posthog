#!/bin/bash
# Wrapper that ensures venv is active before running hogli
# Needed for git hooks / lint-staged which may run outside activated shell

if [ -z "$VIRTUAL_ENV" ]; then
    if [ -d ".flox/cache/venv" ]; then
        source .flox/cache/venv/bin/activate
    elif [ -d ".venv" ]; then
        source .venv/bin/activate
    elif [ -d "env" ]; then
        source env/bin/activate
    fi
fi

exec hogli "$@"
