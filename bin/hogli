#!/usr/bin/env python3
"""Entry point for the PostHog developer CLI."""

from pathlib import Path
import sys

REPO_ROOT = Path(__file__).resolve().parent.parent
if str(REPO_ROOT) not in sys.path:
    sys.path.insert(0, str(REPO_ROOT))

try:
    from hogli.cli import app  # noqa: E402  (import after path modification)
except ModuleNotFoundError as exc:  # pragma: no cover - depends on environment state
    missing = exc.name
    if missing == "typer":
        sys.stderr.write(
            "Typer is not installed. Activate the Flox environment or run `uv sync` to install Python dependencies.\n"
        )
        sys.exit(1)
    raise

if __name__ == "__main__":
    app()
