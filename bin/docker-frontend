#!/bin/bash
set -e

export WEBPACK_HOT_RELOAD_HOST="0.0.0.0"

# Leverage the node_modules directory generated by the Dockerfile
echo Syncing ./node_modules from /code/node_modules. This can take a long time the first time.
time rsync -a -W --no-compress `# https://serverfault.com/a/505758` \
  /code/node_modules/ ./node_modules

yarn install
yarn start-docker
