#!/bin/bash
set -e

gunicorn posthog.wsgi \
    --config gunicorn.config.py \
    --bind 0.0.0.0:8000 \
    --log-file - \
    --log-level info \
    --capture-output \
    --enable-stdio-inheritance \
    --access-logfile - \
    --worker-tmp-dir /dev/shm \
    --workers=2 \
    --threads=4 \
    --worker-class=gthread
