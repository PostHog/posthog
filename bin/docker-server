#!/bin/bash
set -e

python manage.py migrate --check

gunicorn posthog.wsgi \
    --config gunicorn.config.py \
    --bind 0.0.0.0:8000 \
    --log-file - \
    --log-level info \
    --access-logfile - \
    --worker-tmp-dir /dev/shm \
    --workers=2 \
    --threads=4 \
    --worker-class=gthread
