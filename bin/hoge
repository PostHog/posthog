#!/bin/bash
set -e

if [[ "$@" == *".hog"* ]]; then
  exec python3 -m posthog.hogql.cli --compile "$@"
else
  echo "$0 - the Hog compil√´r! ü¶î+üï∂Ô∏è= Hoge"
  echo ""
  echo "Usage:     bin/hog <file.hog>                 run .hog source code"
  echo "           bin/hog <file.hoge>                run compiled .hoge bytecode"
  echo "           bin/hoge <file.hog> <output.hoge>  compile .hog into .hoge"
  echo ""
  echo "Options:   --debug            run the debugger (Python only)"
  echo "           --python           use the Python VM"
  echo "           --nodejs           use the Node.js VM"
  exit 1
fi
